<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<!-- Name registering configuration -->
	<managed-bean>
		<managed-bean-name>inputName</managed-bean-name>
		<managed-bean-class>org.rojoherrero.learnjsf.controller.pb.NameController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>pb/name-input.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goodInput</from-outcome>
			<to-view-id>pb/name-output.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>badInput</from-outcome>
			<to-view-id>pb/wrong-input.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<!-- Flip Coin configuration -->
	<managed-bean>
		<managed-bean-name>luckGameController</managed-bean-name>
		<managed-bean-class>org.rojoherrero.learnjsf.controller.pb.FlipController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>pb/*</from-view-id>
		<navigation-case>
			<from-outcome>stop</from-outcome>
			<to-view-id>pb/defeat.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>pb/a.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>continue</from-outcome>
			<to-view-id>pb/b.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>pb/b.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>continue</from-outcome>
			<to-view-id>pb/c.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>pb/c.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>continue</from-outcome>
			<to-view-id>pb/victory.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
